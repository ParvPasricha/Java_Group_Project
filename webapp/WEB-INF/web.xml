<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
         version="3.1">
    <display-name>Food Waste Reduction Platform</display-name>
    
    <!-- UserController -->
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>controller.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    
    <!-- RetailerController -->
    <servlet>
        <servlet-name>RetailerController</servlet-name>
        <servlet-class>controller.RetailerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RetailerController</servlet-name>
        <url-pattern>/retailer</url-pattern>
    </servlet-mapping>

    <!-- ConsumerController -->
    <servlet>
        <servlet-name>ConsumerController</servlet-name>
        <servlet-class>controller.ConsumerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConsumerController</servlet-name>
        <url-pattern>/consumer</url-pattern>
    </servlet-mapping>
    
    <!-- CharityController -->
    <servlet>
        <servlet-name>CharityController</servlet-name>
        <servlet-class>controller.CharityController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CharityController</servlet-name>
        <url-pattern>/charity</url-pattern>
    </servlet-mapping>

    <!-- SurplusAlertController -->
    <servlet>
        <servlet-name>SurplusAlertController</servlet-name>
        <servlet-class>controller.SurplusAlertController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SurplusAlertController</servlet-name>
        <url-pattern>/surplusAlert</url-pattern>
    </servlet-mapping>
    
    <!-- JSP pages -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>login.jsp</welcome-file>
        <welcome-file>register.jsp</welcome-file>
    </welcome-file-list>

    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
    <!-- Error Handling -->
    <error-page>
        <error-code>404</error-code>
        <location>/error404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error500.jsp</location>
    </error-page>
</web-app>
